  "license": "MIT",
  "peerDependencies": {
    "@opencode-ai/plugin": ">=0.13.7"
  },
  "dependencies": {
    "@ai-sdk/openai-compatible": "^1.0.27",
    "@tarquinen/opencode-auth-provider": "^0.1.7",
    "ai": "^5.0.98",
    "jsonc-parser": "^3.3.1"
  },
  "devDependencies": {
    "@opencode-ai/plugin": ">=0.13.7",
    "@types/node": "^24.10.1",
